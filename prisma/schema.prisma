generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./paiement.db"
}

//CHEMAT DE LA BDD

//la table Agent
model Agent {
  id    Int    @id @default(autoincrement())
  nom  String
  postNom  String
  prenom  String
  tel  String
  mdp  String
  matricule  String
  email String @unique
  salaire Int 
  solde Int 
  notificateur Boolean @default(false)
  notifvu Notifvu[]
}

//la table Notification
model Notification {
  id    Int    @id @default(autoincrement())
  date DateTime
  contenu String
  notifvu Notifvu[]
}

//la table Notifvu (en relation avec la table Agent)
model Notifvu {
  id Int @id @default(autoincrement())
  idAgent Int ?
  idNotification Int ?
  notification Notification? @relation(fields: [idNotification], references: [id])
  agent Agent? @relation(fields: [idAgent], references: [id])
}

//la table Banque 
model Banque {
  id Int @id @default(autoincrement())
  mdp String
  montant Int
}
